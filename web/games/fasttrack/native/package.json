{
  "name": "fasttrack-game",
  "productName": "Fast Track",
  "version": "1.0.0",
  "description": "Strategic board game racing - Race your pegs around the board, use the Fast Track shortcut, and cut your opponents!",
  "main": "main.js",
  "author": {
    "name": "ButterflyFX",
    "email": "contact@butterflyfx.us"
  },
  "license": "UNLICENSED",
  "private": true,
  "homepage": "https://butterflyfx.us",
  "repository": {
    "type": "git",
    "url": "https://github.com/kenbin64/fasttrackgame"
  },
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "build:steam": "electron-builder --win --config electron-builder-steam.yml",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "electron-store": "^8.1.0",
    "greenworks": "^0.15.0"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "us.butterflyfx.fasttrack",
    "productName": "Fast Track",
    "copyright": "Copyright Â© 2026 ButterflyFX",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "preload.js",
      "game/**/*",
      "assets/**/*",
      "!node_modules/greenworks/deps",
      "!**/*.map"
    ],
    "extraResources": [
      {
        "from": "steam",
        "to": "steam"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icon.ico",
      "artifactName": "${productName}-${version}-win.${ext}"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.board-games",
      "artifactName": "${productName}-${version}-mac.${ext}"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icons",
      "category": "Game",
      "artifactName": "${productName}-${version}-linux.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "build/icon.ico",
      "uninstallerIcon": "build/icon.ico",
      "installerHeaderIcon": "build/icon.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Fast Track"
    }
  }
}
