# ButterflyFX Environment Configuration
# =====================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control

# =============================================================================
# STRIPE PAYMENT CONFIGURATION
# =============================================================================
# Your Stripe account: kenetics.art@gmail.com
# Dashboard: https://dashboard.stripe.com/
#
# To get your keys:
# 1. Log in to Stripe Dashboard
# 2. Go to Developers → API keys
# 3. Copy the Publishable key and Secret key

# Test mode keys (for development)
STRIPE_PUBLISHABLE_KEY=pk_test_YOUR_TEST_PUBLISHABLE_KEY
STRIPE_SECRET_KEY=sk_test_YOUR_TEST_SECRET_KEY

# Live mode keys (for production) 
# STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_LIVE_PUBLISHABLE_KEY
# STRIPE_SECRET_KEY=sk_live_YOUR_LIVE_SECRET_KEY

# Webhook secret (from Stripe Dashboard → Developers → Webhooks)
# Create a webhook endpoint pointing to: https://butterflyfx.us/api/payment/webhook
# Subscribe to events: payment_intent.succeeded, customer.subscription.*
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET


# =============================================================================
# GOOGLE OAUTH (for "Login with Google")
# =============================================================================
# Setup at: https://console.cloud.google.com/
#
# Steps:
# 1. Create a new project or select existing
# 2. Go to APIs & Services → Credentials
# 3. Create OAuth 2.0 Client ID (Web application)
# 4. Add authorized redirect URIs:
#    - https://butterflyfx.us/api/auth/google/callback
#    - http://localhost:8000/api/auth/google/callback (for local dev)

GOOGLE_CLIENT_ID=YOUR_GOOGLE_CLIENT_ID.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=YOUR_GOOGLE_CLIENT_SECRET
GOOGLE_REDIRECT_URI=https://butterflyfx.us/api/auth/google/callback


# =============================================================================
# FACEBOOK OAUTH (for "Login with Facebook")
# =============================================================================
# Setup at: https://developers.facebook.com/
#
# Steps:
# 1. Create a new app (Consumer type)
# 2. Add "Facebook Login" product
# 3. Go to Settings → Basic to get App ID and Secret
# 4. Go to Facebook Login → Settings and add:
#    - https://butterflyfx.us/api/auth/facebook/callback

FACEBOOK_APP_ID=YOUR_FACEBOOK_APP_ID
FACEBOOK_APP_SECRET=YOUR_FACEBOOK_APP_SECRET
FACEBOOK_REDIRECT_URI=https://butterflyfx.us/api/auth/facebook/callback


# =============================================================================
# GITHUB OAUTH (for "Login with GitHub")
# =============================================================================
# Setup at: https://github.com/settings/developers
#
# Steps:
# 1. Create a new OAuth App
# 2. Set homepage URL: https://butterflyfx.us
# 3. Set callback URL: https://butterflyfx.us/api/auth/github/callback

GITHUB_CLIENT_ID=YOUR_GITHUB_CLIENT_ID
GITHUB_CLIENT_SECRET=YOUR_GITHUB_CLIENT_SECRET
GITHUB_REDIRECT_URI=https://butterflyfx.us/api/auth/github/callback


# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Base URL for the site
BASE_URL=https://butterflyfx.us

# Server port
PORT=8000

# Environment mode
ENVIRONMENT=development
# ENVIRONMENT=production

# Secret key for session encryption (generate a random 32+ char string)
SESSION_SECRET=GENERATE_A_RANDOM_SECRET_KEY_HERE


# =============================================================================
# OPTIONAL: DATABASE
# =============================================================================
# By default, ButterflyFX uses JSON file storage.
# Uncomment these for PostgreSQL in production.

# DATABASE_URL=postgresql://user:password@localhost:5432/butterflyfx


